alias rmrf='rm -rf'

# Custom Functions
mcd() {
	if [[ ! -d $1 ]]; then
		md $1
	fi
	cd $1
}



# Go back `n` levels
back () {
    for i in `seq 1 $1`; do
        cd ..
    done
}
LOCALBIN="$HOME/.local/bin"
